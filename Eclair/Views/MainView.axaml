<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Eclair.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Eclair.Views.MainView"
             x:DataType="vm:ViewModel">
	<Design.DataContext>
		<vm:ViewModel />
	</Design.DataContext>

	<Grid Name="MainGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="33"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="100"/>
			<RowDefinition Height="0"/>
		</Grid.RowDefinitions>

		<TextBox Name="SearchBox"
				 HorizontalAlignment="Center"
				 Watermark="{Binding Search}"
				 TextChanged="TextBox_TextChanged"/>

		<Menu VerticalAlignment="Top"
			  HorizontalAlignment="Right">
			<MenuItem Header="â‰¡"
					  FontSize="30">
				<MenuItem Header="{Binding Settings}"
						  Click="GotoSettings"
						  FontSize="16"
						  Icon="{StaticResource settings}"/>
				<MenuItem Header="{Binding SelectFile}"
						  Click="SelectFile"
						  HotKey="CTRL + O"
						  FontSize="16"
						  Icon="{StaticResource selectfile}"/>
				<Separator/>
				<MenuItem Header="{Binding About}"
						  Click="GotoAbout"
						  FontSize="16"
						  Icon="{StaticResource about}"/>
			</MenuItem>
		</Menu>
		
		<Button Name="BackButton"
				Background="Transparent"
				Click="BackToList"
				IsVisible="False"
				IsEnabled="False">
			<TextBlock Text="{Binding Back}"/>
		</Button>
		
		<ScrollViewer Margin="2"
					  Grid.Row="1">
			<StackPanel Name="MusicPanel">
				<TextBlock Text="{Binding NothingFound}"
						   HorizontalAlignment="Center"
						   FontWeight="Bold"
						   FontSize="24"/>
			</StackPanel>
		</ScrollViewer>

		<Grid Name="AudioPanel"
			  Grid.Row="2"
			  Background="DarkGray"
			  PointerReleased="ShowPlayer">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Image Name="MusicPicture2"
						MaxWidth="64"
						MaxHeight="64"
						Margin="10,0"
						Source="{StaticResource unknowntrack}">
				<Image.Clip>
					<EllipseGeometry Center="32,32"
									 RadiusX="32"
									 RadiusY="32"/>
				</Image.Clip>
			</Image>
			
			<TextBlock Name="TitleText"
					   Grid.Column="1"
					   Text="-"
					   FontWeight="Bold"
					   TextWrapping="Wrap"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Center"/>
			
			<StackPanel Grid.Column="1"
						Orientation="Horizontal"
						HorizontalAlignment="Right">
				<Button Background="Transparent"
						Click="PlayButtonClicked">
					<Image Name="PB2_Image"
						   Source="{StaticResource playbutton}" Height="64"/>
				</Button>
				<Button Background="Transparent"
						Click="StopButtonClicked">
					<Image Source="{StaticResource stopbutton}" Height="64"/>
				</Button>
			</StackPanel>
		</Grid>

		<Grid Grid.Row="3">
			<StackPanel HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Width="1000">
				<Image Name="MusicPicture"
						MaxWidth="250"
						MaxHeight="250"
						Margin="0,10"
						Source="{StaticResource unknowntrack}">
					<Image.RenderTransform>
						<RotateTransform Angle="0"/>
					</Image.RenderTransform>
					<Image.Clip>
						<EllipseGeometry Center="125,125"
										 RadiusX="125"
										 RadiusY="125"/>
					</Image.Clip>
				</Image>
				<Label Name="TitleLabel"
					   HorizontalAlignment="Center"
					   Content="-"/>
				<StackPanel Orientation="Vertical"
							VerticalAlignment="Center">
					<StackPanel Orientation="Horizontal"
						  HorizontalAlignment="Center">
						<Button Name="PlayButton"
								Click="PlayButtonClicked"
								HorizontalAlignment="Center"
								Margin="10">
							<Image Name="PB_Image"
								   Width="50"
								   Source="{StaticResource playbutton}"/>
						</Button>
						<Button Name="StopButton"
								Click="StopButtonClicked"
								HorizontalAlignment="Center"
								IsEnabled="False"
								Margin="10">
							<Image Width="50"
								   Source="{StaticResource stopbutton}"/>
						</Button>
						<Button Name="LoopButton"
								Click="LB_Click"
								HorizontalAlignment="Center"
								Margin="10">
							<Image Name="LB_Image" Width="50"
								   Source="{StaticResource looparrow}"/>
						</Button>
					</StackPanel>
					<StackPanel Orientation="Horizontal"
								HorizontalAlignment="Center"
								Spacing="3">
						<Label Name="MusPositionLabel"
							   Content="00:00"
							   Margin="0,13"/>
						<Slider Name="MusSlider"
								IsEnabled="False"
								ValueChanged="SliderValueChanged"
								Maximum="100"/>
						<Label Name="MusDurationLabel"
							   Content="00:00"
							   Margin="0,13"/>
					</StackPanel>
				</StackPanel>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>